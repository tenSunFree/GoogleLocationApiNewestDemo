<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#dcd9c6"
                android:endColor="#74593d"
                android:startColor="#74593d"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#3f3232"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#90dcd9c6"
                android:endColor="#9074593d"
                android:startColor="#9074593d"
                android:type="linear"/>
            <stroke
                android:width="2dp"
                android:color="#903f3232"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#403f3232"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="#40dcd9c6"
                android:endColor="#4074593d"
                android:startColor="#4074593d"
                android:type="linear"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>
</selector>